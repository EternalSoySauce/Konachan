<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoFitImageView">
        <attr name="scaleWidth" format="boolean" />
        <attr name="scaleHeight" format="boolean" />
        <attr name="relativeTo" format="enum">
            <enum name="none" value="0" />
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
        <attr name="maxRatio" format="float" />
        <attr name="minRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="corner_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="color1" format="reference|color"/>
        <attr name="color2" format="reference|color"/>
        <attr name="color3" format="reference|color"/>
    </declare-styleable>
</resources>