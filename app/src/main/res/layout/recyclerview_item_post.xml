<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_text_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.ess.konachan.view.AutoFitImageView
            android:id="@+id/iv_post_thumb"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:background="@drawable/ic_bottom_line_post"
            android:scaleType="centerCrop"
            app:relativeTo="width" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_post_thumb"
            android:layout_alignStart="@+id/iv_post_thumb"
            android:layout_below="@+id/iv_post_thumb"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:textColor="@color/color_text_general"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>