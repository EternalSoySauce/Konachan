<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ess.konachan.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_head"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_head"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_unselected"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:layout_below="@id/tv_author"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_head"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_unselected"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:layout_below="@id/tv_author"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/tv_id"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_unselected"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="5dp"
            android:background="@color/color_quote_bg"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/color_text_unselected"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quote"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_unselected"
            android:textSize="15sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>