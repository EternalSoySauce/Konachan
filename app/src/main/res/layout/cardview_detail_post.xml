<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_text_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <include
            android:id="@+id/post_id"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_created_time"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_creator_id"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_author"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_size"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_file_size"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_source"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_artist"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_rating"
            layout="@layout/layout_detail_item"/>

        <include
            android:id="@+id/post_score"
            layout="@layout/layout_detail_item"/>
    </LinearLayout>
</android.support.v7.widget.CardView>