<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="@color/color_text_unselected"
        android:textSize="16sp" />

    <com.ess.anime.wallpaper.ui.view.image.ToggleImageView
        android:id="@+id/iv_favorite"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/background_item_selected"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tag_favorite"
        app:tint="@color/color_text_unselected" />

    <ImageView
        android:id="@+id/iv_annotation"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/background_item_selected"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tag_annotation"
        app:tint="@color/color_text_unselected" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/background_item_selected"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tag_more"
        app:tint="@color/color_text_unselected" />
</LinearLayout>